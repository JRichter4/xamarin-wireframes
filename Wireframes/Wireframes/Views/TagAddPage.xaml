<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wireframes.Views.TagAddPage"
             xmlns:localViews="clr-namespace:Wireframes.Views"
             Title="Add Tag">
    
    <ContentPage.Content>
        <StackLayout Padding="15">
            <localViews:TagDetailView/>
            <Button Text="Save" BackgroundColor="#4BD865"
                    Command="{Binding SaveTagCommand}"/>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>