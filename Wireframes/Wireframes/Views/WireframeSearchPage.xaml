<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:localViews="clr-namespace:Wireframes.Views"
             x:Class="Wireframes.Views.WireframeSearchPage"
             Title="Search" Icon="ic_search_wireframes">
    <ContentPage.Content>
        <StackLayout>
            <SearchBar Placeholder="Search..."
                       IsVisible="{Binding IsSearchable}"
                       Text="{Binding SearchBarText}"/>
            <localViews:WireframeListView/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>