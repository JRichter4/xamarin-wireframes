<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wireframes.Views.TagDetailPage"
             Title="Add New Tag">
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Tag Name" FontAttributes="Bold"/>
            <Entry Text="{Binding Path=Tag.Name}"/>
            <Button Text="Save" Command="{Binding SaveTagCommand}"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>